<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >

  <me.krrr.wallpaper.GradientArtView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/gra_view"
          android:layout_alignParentTop="true"
          />
  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/gra_name"
          android:text="NAME"
          android:layout_centerVertical="true" android:layout_centerHorizontal="true" android:singleLine="true"
          android:paddingLeft="3dip"
          android:paddingRight="3dip" android:selectAllOnFocus="false" android:focusableInTouchMode="true"
          tools:ignore="HardcodedText" android:textSize="@dimen/color_name_size" android:textColor="#f0ffffff"/>
  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/gra_subname"
          android:text="SUBNAME" android:layout_below="@+id/gra_name" android:layout_centerHorizontal="true"
          android:layout_marginTop="-5dip" android:singleLine="true" android:paddingLeft="3dip"
          android:paddingRight="3dip" tools:ignore="HardcodedText" android:textColor="#c3ffffff"
          android:textSize="@dimen/color_subname_size"/>
</RelativeLayout>